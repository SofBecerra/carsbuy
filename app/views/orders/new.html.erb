<div class="container mt-5">
  <h2 class="text-center mb-4">Ordena el carro de tus sueños</h2>

  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6 order-md-2">
      <div class="card bg-light">
        <div class="card-body">
          <h5 class="card-title text-center mb-4">Crea tu orden</h5>
          <%= simple_form_for [@car, @order], url: car_orders_path do |f| %>
            <div class="mb-3">
              <%# <%= f.input :purchase_date, label: "Fecha estimada de compra", input_html: { class: 'form-control' } %> %>
            </div>
            <div class="mb-3">
              <%= f.input :price, as: :float, input_html: { min: 0 }, label: "Tu oferta ($)" %>
            </div>
            <div class="mb-3">
              <p class="text-muted">Precio de venta: $<%= @car.price %></p>
            </div>
            <%= f.submit "Crear orden", class: "btn btn-primary w-100" %>
          <% end %>
        </div>
      </div>

      <div class="card bg-light mt-4">
        <div class="card-body">
          <h5 class="card-title text-center mb-3">Sigue estos pasos:</h5>
          <ol class="list-unstyled">
            <li class="mb-2 d-flex align-items-center">
              <span class="me-2 rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 25px; height: 25px; font-size: 0.8rem;">1</span>
              Elige la fecha
            </li>
            <li class="mb-2 d-flex align-items-center">
              <span class="me-2 rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 25px; height: 25px; font-size: 0.8rem;">2</span>
              Indica tu oferta
            </li>
            <li class="mb-2 d-flex align-items-center">
              <span class="me-2 rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 25px; height: 25px; font-size: 0.8rem;">3</span>
              Crea la orden
            </li>
            <li class="mb-2 d-flex align-items-center">
              <span class="me-2 rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center" style="width: 25px; height: 25px; font-size: 0.8rem;">4</span>
              Un agente de ventas te contactará a la brevedad
            </li>
          </ol>
        </div>
      </div>
    </div>

    <div class="col-12 col-md-8 col-lg-6">
      <%= cl_image_tag @car.photos.last.key, class: "img-fluid rounded shadow", style: "max-width: 100%; height: auto;" %>
    </div>
  </div>

</div>
